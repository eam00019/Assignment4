@page
@model DresstoImpress.Pages.OutfitResultsModel
@{
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="lib/bootstrap/dist/css/bootstrap.min.css">
</head>
<body>

    <div class="header">
        <h1>Find Your Next Outfit</h1>
    </div>

    <div class="row">
    <div class="columnForOR">
        <h2>Don't Get Caught In The Rain</h2>
        <p>Check your forecast for this week</p>
            <a href="https://weather.com/" class="button">Check Weather</a>
    </div>

        <hr class="solid">

    <div class="column2ForOR">
        <h2>Your Outfits for the Week</h2>
        <p>Inspiration based on this week's weather'</p>
        <button onclick="displayRandomImage()">Generate Outfit</button>
        <img id="randomImage" src="" alt="Outfit Image">
    </div>
    </div>

    <script>
        function displayRandomImage() {
            var imageFilenames = [
                'WOFeb61.jpg',
                'WOFeb62.jpg',
                'WOFeb63.jpg',
            ];
            var randomIndex = Math.floor(Math.random() * imageFilenames.length);

            var imageElement = document.getElementById('randomImage');

            imageElement.src = imageFilenames[randomIndex];
        }
    </script>

</body>
</html>



